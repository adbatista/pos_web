<p id="notice"><%= notice %></p>

<%= link_to 'New User', new_user_path %>

<h1>Users active</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Born date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users_facade.active_users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.born_date %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<h1>Users inactive</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Born date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users_facade.inactive_users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.born_date %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
